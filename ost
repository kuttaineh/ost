#!/bin/zsh
# Oscar's Saying Tool
# Written by: https://m.me/Rammy
# Description: This tool receives input and has say speak it.

# Functions:

	utter() { printf $1; say -v Samantha $1; }

	instruct() { utter "Type \\\\ [return] to enter into pre-programed speech mode and then type q to return to freemode."; }

# Program:

	instruct
	while do
		read words
		if [[ $words = \\* ]]
		then
			~/Downloads/ost-main/pss
		else
			say "$words"
		fi
	done
	
